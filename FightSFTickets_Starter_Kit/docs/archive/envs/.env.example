# ============================================================================
# FightSFTickets Environment Configuration
# ============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env files to version control
# ============================================================================

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application environment: dev, staging, prod
APP_ENV=dev

# Backend server configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# CORS origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Application URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL database URL
# Format: postgresql+psycopg://username:password@host:port/database
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/fightsf

# Database connection pool settings (optional)
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=40
# DB_POOL_RECYCLE=3600

# ============================================================================
# STRIPE PAYMENT CONFIGURATION
# ============================================================================

# Stripe API Keys
# Test mode keys start with sk_test_ and pk_test_
# Live mode keys start with sk_live_ and pk_live_
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Stripe Price IDs (test mode examples - replace with your actual price IDs)
STRIPE_PRICE_STANDARD=price_1SedsMLncfs9uXKNp1q7FWc7  # $9.89 test
STRIPE_PRICE_CERTIFIED=price_1SedsaLncfs9uXKN7YnRzjt4  # $19.89 test

# ============================================================================
# LOB MAIL SERVICE CONFIGURATION
# ============================================================================

# Lob API Key (test keys start with test_)
LOB_API_KEY=test_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Lob mode: "test" or "live"
LOB_MODE=test

# Lob from address (for mail sending)
# LOB_FROM_NAME="FightSFTickets"
# LOB_FROM_ADDRESS_LINE1="123 Main St"
# LOB_FROM_ADDRESS_CITY="San Francisco"
# LOB_FROM_ADDRESS_STATE="CA"
# LOB_FROM_ADDRESS_ZIP="94105"
# LOB_FROM_ADDRESS_COUNTRY="US"

# ============================================================================
# AI SERVICES CONFIGURATION
# ============================================================================

# DeepSeek API
DEEPSEEK_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# OpenAI API (alternative/backup)
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Application secret key (used for signing, encryption, etc.)
# Generate a secure random string: openssl rand -hex 32
SECRET_KEY=dev-secret-change-me-in-production-XXXXXXXXXXXXXXXX

# JWT configuration (if using authentication)
JWT_SECRET=change-me-jwt-secret-XXXXXXXXXXXXXXXX
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate limiting (requests per minute)
# RATE_LIMIT_PER_MINUTE=60
# RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Sentry DSN (for error tracking)
# SENTRY_DSN=https://XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX@sentry.io/XXXXXXX

# ============================================================================
# GOOGLE SERVICES (if using Google APIs)
# ============================================================================

# Path to Google service account credentials file
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service_account.json

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================

# Enable/disable debug features
DEBUG=true

# Enable SQL query logging
# SQL_ECHO=false

# ============================================================================
# VALIDATION NOTES
# ============================================================================

# IMPORTANT: The following values MUST be changed in production:
# 1. SECRET_KEY - Must be a cryptographically secure random string
# 2. STRIPE_SECRET_KEY - Must use live mode keys (sk_live_...)
# 3. STRIPE_WEBHOOK_SECRET - Must use production webhook secret
# 4. LOB_API_KEY - Must use live mode keys
# 5. LOB_MODE - Must be "live" in production
# 6. DATABASE_URL - Must point to production database
# 7. All API keys - Must use production keys

# To validate your configuration, run:
# python backend/src/config.py  # Will check for default values
